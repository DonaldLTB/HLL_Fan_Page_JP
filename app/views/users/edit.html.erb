<% if current_user == @user %>
<div class="row">
  <div class="col-lg-4 col-md-6 ml-auto mr-auto">
    <h1 class="text-center mt-4">アカウント編集</h1>

      <%= simple_form_for @user, url: user_path(@user) do |f| %>

      <%= f.input :username, label: "ユーザー名" %>
      <%= f.input :bio, :input_html => {:rows => 7}, label: "自己紹介" %>
      <%= f.input :steam_name, label: "Steam名" %>
      <%= f.input :discord, label: "個人Discord（名前#数字　例:Bot#1552）" %>
      <%= f.input :role, label: "好きな役割", :collection => ["Commander", "Officer", "Rifleman", "Anti-Tank", "Machine Gunner", "Assault", "Medic", "Engineer", "Support", "Automatic Rifleman", "Spotter", "Sniper", "Tank Commander", "Crewman"] %>
      <%= f.input :avatar, as: :file, label: "アバター" %>
      <%= f.button :submit, "完了", class:"btn-treehouse" %>
      <% end %>
  </div>
</div>
<% else %>
  <h1>アクセス不可能</h1>
<% end %>
