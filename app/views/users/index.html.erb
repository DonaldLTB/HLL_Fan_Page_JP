<%# <div class="container"> %>
<p>ユーザー人数: <%= @users.count %>名</p>
    <div class="card-columns">
      <% @users.order(created_at: :asc).each do |user| %>
      <div class="card">
        <% if user.avatar.attached? == true %>
          <%= cl_image_tag user.avatar.key, transformation: [
            {effect: "cartoonify"},
            {radius: "max"},
            {effect: "outline:100", color: "lightblue"},
            {background: "lightblue"},
            {quality: "auto", fetch_forma: "auto"},
            {height: 180, width: 320, crop: "fit"}
          ] %>
        <% else %>
          <%= image_tag "https://cdn.discordapp.com/attachments/812567934551457805/813051684212310036/HLL.png", class: "non-avatar"%>
        <% end %>
        <div class="card-body">
          <h1 class="card-title"><%= user.username %></h1>
          <h2 class="card-text"><%= user.role %></h2>
          <h3 class="card-text"><%= user.steam_name %></h3>
        </div>
      </div>
      <% end %>
    </div>
<%# </div> %>
